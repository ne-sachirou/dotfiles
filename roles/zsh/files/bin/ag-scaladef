#!/usr/bin/env bb
;; -*- mode: clojure; -*-
(require '[babashka.process :refer [process]])


;; ag -G '\.scala$' "(class|def|object|trait|type|val|var) $1(?=\W)"
(let [word (first *command-line-args*)]
  (-> ["ag"
       "-G" "\\.scala$"
       "--color"
       (str "(class|def|object|trait|type|val|var) " word "(?=\\W)")]
      (process {:in :inherit})
      :out
      slurp
      println))
