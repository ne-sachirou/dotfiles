#!/usr/bin/env runghc

import System.Process ( readCreateProcess, shell )

main :: IO ()
main = do
  sh "yes y | docker system prune --volumes"
  sh "docker run --rm --privileged alpine hwclock -s"

sh :: String -> IO ()
sh command = do
  putStrLn $ "+" ++ command
  out <- readCreateProcess (shell command) ""
  putStrLn out

-- vim:set ft=haskell:
